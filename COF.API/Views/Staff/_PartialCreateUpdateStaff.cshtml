<!-- Modal -->
<div class="modal fade" id="addOrUpdateStaffModal" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="box-title" id="lblTitle"></h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <input id="txtHiddenId" value="0" hidden type="text" />
                            <label for="txtName" class="col-sm-2 control-label">Tên đăng nhập:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="txtUsername" placeholder="Nhập tên đăng nhập ....">
                            </div>
                        </div>


                        <div class="form-group">

                            <label for="txtName" class="col-sm-2 control-label">Vị trí:</label>
