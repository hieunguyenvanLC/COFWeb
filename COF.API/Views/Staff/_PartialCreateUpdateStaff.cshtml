                                <input type="text" class="form-control" id="txtAddress" placeholder="Nhập số điện thoại ....">
                            </div>
                        </div>

                        <div class="form-group">

                            <label for="txtName" class="col-sm-2 control-label">Password:</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="txtPassword" placeholder="Nhập mật khẩu ....">
                            </div>
                        </div>

                        <div class="form-group">

                            <label for="txtName" class="col-sm-2 control-label">Confirm Password:</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="txtConfirmPassword" placeholder="Nhập mật khẩu xác nhận ....">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancel" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button type="button" id="btnSave" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>