
<div class="row" id="createUpdateSection" hidden>
    <div class="col-md-12">
        <div class="col-md-12">
            <!-- general form elements disabled -->
            <div class="box box-warning ">
                <div class="box-header with-border">
                    <h3 class="box-title" id="lblTitle"></h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body" id="createUpdateProductFrm">
                    <input type="hidden" class="form-control" id="txtHiddenId" value="0" />
                    <div class="form-group">
                        <label>Tên</label>
                        <input type="text" class="form-control" id="txtName" name="name" value="" placeholder="Tên sản phẩm ..." />
                    </div>
                    <div class="form-group">
                        <label>Danh mục</label>

                        <select class="form-control" id="ddlCategories">
                            <option></option>
                            <option></option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Mô tả</label>
                        <textarea class="form-control" placeholder="Mô tả sản phẩm ..." rows="5" id="txtDescription">
                        </textarea>
                    </div>

                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="chkActive">
                                Hoạt động
                            </label>
                        </div>
                    </div>


                    <div class="form-group">

                        <div class="panel-body">


                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>
                                            Hình ảnh sản phẩm
                                        </label>
                                        <p id="txtAvatarMessage">

                                        </p>
                                        <div class="col-md-6" style="align-content:center">
                                            <p id="lblUploadAlert">

                                            </p>

                                            <div class="btn-group" style="margin-top: -22px;">
                                                <label title="Upload image file" for="inputImage" class="btn btn-default">
                                                    <i class="fa fa-cloud-upload"></i>
                                                    <input type="file" accept="image/*" name="file" id="inputImage" class="hide">
                                                    Tải lên
                                                </label>

                                            </div>
                                            <div class="" style="align-content:center">
                                                <div style="width:100%">
                                                    <img class="cropper-hidden">
                                                    <img id="bigView" style="width:100%;height:100%" />
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">

                                    <div class="form-group">
                                        <label>Nguyên liệu</label>

                                        <select class="form-control" style="margin-top: 4px;" id="ddlRms"></select>

                                    </div>
                                    <table class="table">
                                        <thead >
                                            <tr style="background-color:#ddd;vertical-align: middle;">
                                                @*<th style="text-align:center;">#</th>*@
                                                <th style="text-align:center;">Nguyên liệu</th>
                                                <th style="text-align:center;"></th>
                                            </tr>

                                        </thead>
                                        <tbody id="tblRms"></tbody>
                                    </table>

                                </div>

                                <div class="col-md-4">

                                    <div class="form-group" id="priceFrm">
                                        <label>Size</label>
                                        <br />
                                        <button type="button" id="btnAddProductSize" class="btn bg-purple margin" data-toggle="modal" data-target="#addPriceModal">
                                            Thêm mới
                                        </button>

                                        <table class="table table-responsive">
                                            <tbody id="tblProductSizes"></tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>
                </div>


                <br />

                <div style="float:right">
                    <button type="button" class="btn bg-olive margin" id="btnSave">Lưu</button>
                    <button type="button" class="btn bg-danger" id="btnUpdateProductFormular">Điều chỉnh công thức</button>
                    <button type="button" class="btn btn-default margin" id="btnCancel">Quay lại menu</button>
                </div>

            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.box -->

</div>
</div>

<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="addPriceModal" tabindex="-1" role="dialog" aria-labelledby="addPriceModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Thêm giá</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <input hidden type="text" value="0" id="txtProductSizeId" />
                            <label for="inputEmail3" class="col-sm-2 control-label">Size: </label>
                            <div class="col-sm-10">
                                <select id="ddlSizes" class="form-control">
                                    <option value="0"> -- Chọn size --</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtProductSizePrice" class="col-sm-2 control-label">Giá tiền: </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control money" id="txtProductSizePrice" placeholder="Nhập giá tiền ....">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancelPrice" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button type="button" id="btnSaveDetailPrice" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>


<script id="data-rms-template" type="x-tmpl-mustache">
    <tr style="text-align:center;vertical-align: middle;">
        @*<td>{{Index}}</td>*@
        <td>{{Name}}</td>
        <td style="width:15%">
            <a class="btn btn-danger btnRemoveRm" data-id="{{Id}}"  onclick="productController.removeRm({{Id}})" > <i class="fa fa-remove"></i> </a>
        </td>
    </tr>
</script>

